<?xml version="1.0" encoding="utf-8"?>
<odoo>

	    <template id="login_layout" inherit_id="web.frontend_layout">
            <xpath expr="//div[@id='wrapwrap']" position="attributes">
                <attribute name="t-att-style">background_src</attribute>
            </xpath>
            <xpath expr="//div[hasclass('o_footer_copyright')]/child::div/child::div" position="inside">
                <a href="https://app.rayl.community" target="_blank" class="mr-3 nav-item" data-v-6ffd45e8="">
                <font style="" class="text-o-color-3">Apptive.Pro</font>
                </a>
                <a href="https://apptive.rayl.com/slides" target="_blank" class="nav-item mr-3" data-v-6ffd45e8="">
                <font style="" class="text-o-color-3">University</font>
                </a>
                <a href="https://rayl.cloud/events.html" target="_blank" class="nav-item mr-3" data-v-6ffd45e8="">
                <font style="" class="text-o-color-3">Events</font>
                </a>
                <a href="https://rayl.tawk.help/" target="_blank" class="nav-item mr-3" data-v-6ffd45e8="">
                <font style="" class="text-o-color-3">Support</font>
                </a>
            </xpath>
            <xpath expr="//div[hasclass('o_footer_copyright')]" position="attributes">
                <attribute name="t-att-style">footer_color if footer_color else 'color:#F7F7F9 !important;'</attribute>
            </xpath>
            <xpath expr="//header//nav[hasclass('navbar-light')]" position="attributes">
                <attribute name="t-att-style">nav_color if nav_color else 'background:#00B3DD !important;'</attribute>
            </xpath>
            <xpath expr="//footer" position="attributes">
                <attribute name="t-att-style">nav_color if nav_color else 'background:#00B3DD !important;'</attribute>
            </xpath>
            <xpath expr="//*[hasclass('o_footer_copyright_name')]" position="attributes">
                <attribute name="t-att-style">'color:#F7F7F9 !important;'</attribute>
            </xpath>
    	</template>

