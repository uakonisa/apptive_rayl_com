                    <div class="card-footer text-center" style="background-color:#00B3DD;color:#fff">
                      <a id="by_mlm" class="btn btn-default btn-lg a-submit">
                        <span class="fa fa-shopping-cart"/>
                        Buy Now
                      </a>
                    </div>
                  </div>
                </div>
                  <div class="col-md-4 ">
                  <div class="card" style="border-color:#00B3DD;">
                    <div class="card-body text-center" style="background-color:#00B3DD !important;color:#fff">
                      <div>
                        <h3> <t t-esc="bundle_product_temp_id.name"/></h3>
                      </div>
                    </div>
                    <div style='max-width: 150px; maxheight:150px;margin:auto;'>
                      <span t-field="bundle_product_temp_id.image_1920" t-options='{"widget": "image"}'/>
                    </div>
                    <div class="card-body text-center" style="background-color:#00B3DD !important;color:#fff">
                      <h3><t t-esc="bundle_product_temp_id.currency_id.symbol"/> <t t-esc="'%.2f'% bundle_product_temp_id.list_price"/> </h3>
                    </div>
                    <p class="text-center" style="margin-bottom:0rem;"> <t t-esc="bundle_product_temp_id.description_sale"/> </p>

