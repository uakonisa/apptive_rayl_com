        <link rel="stylesheet" type="text/scss" href="/rayl_floating_social_share_buttons/static/src/scss/website_social_share.scss"/>
    </xpath>
</template>

<template id="assets_frontend" inherit_id="website.assets_frontend" name="Rayl Social-Share assets">
