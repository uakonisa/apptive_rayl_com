<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="res_partner_kanban_view" model="ir.ui.view">
            <field name="name">res.partner.kanban.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='o_kanban_image']//img" position="attributes">
                    <attribute name="class">img-thumbnail img-circle </attribute>
                </xpath>

                <xpath expr="//div[@class='o_kanban_image']" position="attributes">
                    <attribute name="class">o_kanban_image img-thumbnail img-circle</attribute>
                </xpath>

            </field>
        </record>
    </data>
</openerp>
